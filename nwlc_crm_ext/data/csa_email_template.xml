<odoo>
    <record id="email_template_csa_general_agreement" model="mail.template">
        <field name="name">CSA General Agreement Email</field>
        <field name="email_from">{{ (object.user_id.email_formatted or object.company_id.email_formatted or user.email_formatted) }}</field>        <field name="subject">CSA General Agreement Report</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="body_html">
            <![CDATA[
                <p>Dear <t t-esc="object.full_name.name or 'Customer'"/>,</p>
                <p>Please find attached the CSA General Agreement Report.</p>
                <p>Best regards,<br/>Your Team</p>
            ]]>
        </field>
        <field name="attachment_ids" eval="[(6, 0, [])]"/> <!-- Placeholder -->
    </record>


